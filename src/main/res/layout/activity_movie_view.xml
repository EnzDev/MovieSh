<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.enzomallard.moviesh.View_Movie"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/the_movie_Lposter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:srcCompat="@color/colorPrimary"
        android:scaleType="fitStart"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/the_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/the_movie_Lposter"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/the_movie_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/the_movie_title"
        android:layout_alignStart="@+id/the_movie_title" />

    <RatingBar
        android:id="@+id/the_movie_rating"
        style="@android:style/Widget.Material.Light.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/the_movie_date"
        android:layout_below="@+id/the_movie_date"
        android:layout_marginTop="16dp"
        android:numStars="5"
        android:rating="4.5" />

    <TextView
        android:id="@+id/the_movie_overview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:gravity="fill_horizontal"
        android:isScrollContainer="true"
        android:paddingBottom="25sp"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:text=""
        android:layout_alignStart="@+id/the_movie_title"
        android:layout_below="@+id/the_movie_rating" />

    <TextView
        android:id="@+id/the_movie_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/the_movie_overview"
        android:layout_below="@+id/the_movie_overview"
        android:layout_marginTop="-25sp"
        android:text="" />

</RelativeLayout>
